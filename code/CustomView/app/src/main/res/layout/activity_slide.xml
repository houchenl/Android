<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_scroll_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="scroll to"/>
        <Button
            android:id="@+id/btn_scroll_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="scroll by"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_smooth_scroll_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="smooth scroll to"/>
        <Button
            android:id="@+id/btn_smooth_scroll_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="smooth scroll by"/>
    </LinearLayout>

    <com.hc.customview.slide.CustomHorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:scrollbars="none">
        <com.hc.customview.slide.SlideLayout
            android:id="@+id/slide_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        </com.hc.customview.slide.SlideLayout>
    </com.hc.customview.slide.CustomHorizontalScrollView>


</LinearLayout>
