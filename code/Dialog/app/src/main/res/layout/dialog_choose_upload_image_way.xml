<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="684dp"
        android:layout_height="382dp"
        android:background="@drawable/shape_bg_white_with_radius">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:padding="9dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="手机扫码发送图片"
                    android:textSize="30dp"
                    android:textColor="#63748f"/>

                <LinearLayout
                    android:layout_width="178dp"
                    android:layout_height="178dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/shape_bg_border_qrcode">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="使用高拍仪拍摄"
                    android:textSize="30dp"
                    android:textColor="#63748f"/>

                <ImageView
                    android:layout_width="178dp"
                    android:layout_height="178dp"
                    android:src="@drawable/oninquirying_img_choose_uvc_camera"/>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
