<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/common_padding_120dip"
        android:layout_height="@dimen/common_padding_140dip"
        android:layout_centerInParent="true"
        android:background="@drawable/mtc_base_dialog_change_voice_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_padding_15dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/mtc_text_size_18sp"/>

        <TextView
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_padding_60dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_padding_20dip"
            android:background="@drawable/mtc_base_btm_stroke_voice_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/mtc_text_size_22sp"/>
    </LinearLayout>
</RelativeLayout>


