<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hc.picasso.MainActivity">

    <Button
        android:text="Show normal"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:id="@+id/btn_show_normal"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/btn_img_list"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:text="Image List"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:id="@+id/btn_img_list"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_normal"
        android:layout_marginTop="14dp"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
